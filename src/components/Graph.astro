      <div class="modal-controls">
        <button id="fitBtnModal" class="control-btn" title="Fit to Screen">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M8 3H5C4.46957 3 3.96086 3.21071 3.58579 3.58579C3.21071 3.96086 3 4.46957 3 5V8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M21 8V5C21 4.46957 20.7893 3.96086 20.4142 3.58579C20.0391 3.21071 19.5304 3 19 3H16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M8 21H5C4.46957 21 3.96086 20.7893 3.58579 20.4142C3.21071 20.0391 3 19.5304 3 19V16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M21 16V19C21 19.5304 20.7893 20.0391 20.4142 20.4142C20.0391 20.7893 19.5304 21 19 21H16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        <button id="freezeBtnModal" class="control-btn" title="Toggle Physics">
          <svg id="pauseIconModal" width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect x="6" y="4" width="4" height="16" fill="currentColor" rx="1"/>
            <rect x="14" y="4" width="4" height="16" fill="currentColor" rx="1"/>
          </svg>
          <svg id="playIconModal" width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="display: none;">
            <path d="M5 3L19 12L5 21V3Z" fill="currentColor"/>
          </svg>
        </button>
      </div>
    </div>
  </div>
</div>

<script id="graph-data" type="application/json" set:html={graphData}></script>

<script type="module">
  import { Network, DataSet } from 'https://unpkg.com/vis-network@9.1.9/standalone/esm/vis-network.min.js';

  const container = document.getElementById('graph-container');
  const graphDataElement = document.getElementById('graph-data');

  if (!container || !graphDataElement) {
    console.error('Graph elements not found');
  } else {
    try {
      const { nodes, edges, options } = JSON.parse(graphDataElement.textContent);
      const data = {
        nodes: new DataSet(nodes),
        edges: new DataSet(edges)
      };

      const network = new Network(container, data, options);
      let isPhysicsEnabled = true;
      let modalNetwork = null;
      let isModalPhysicsEnabled = true;

      // Helper function to extract term ID from URI
      function getTermId(uri) {
        return uri.replace(/^:/, '').replace(/^.*[:#/]/, '');
      }

      // Helper function to check if URI points to a term page
      function isTermUri(uri) {
        return uri.startsWith(':') || uri.includes('usmba.ai');
      }

      // Direct navigation on node click
      network.on('click', (params) => {
        // Click on edge - open predicate URL if external
        if (params.edges.length > 0 && params.nodes.length === 0) {
          const edgeId = params.edges[0];
          const edgeData = data.edges.get(edgeId);
          if (edgeData && edgeData.title && edgeData.title.startsWith('http')) {
            window.open(edgeData.title, '_blank');
          }
          return;
        }

        // Click on node - navigate to term or source page
        if (params.nodes.length > 0) {
          const nodeId = params.nodes[0];

          if (isTermUri(nodeId)) {
            const termId = getTermId(nodeId);

            // Check if this is a source (from externalResources)
            if (window.sourceIds && window.sourceIds.has(termId)) {
              window.location.href = `/sources/${termId}`;
            } else {
              window.location.href = `/terms/${termId}`;
            }
          } else if (nodeId.startsWith('http')) {
            // External URL - open in new tab
            window.open(nodeId, '_blank');
          }
        }
      });

      // Expose network for table interaction
      window.graphNetwork = network;
      window.graphData = data;

      // Controls
      document.getElementById('fitBtn').addEventListener('click', () => {
        network.fit({ animation: { duration: 500, easingFunction: 'easeInOutQuad' } });
      });

      document.getElementById('freezeBtn').addEventListener('click', () => {
        isPhysicsEnabled = !isPhysicsEnabled;
        network.setOptions({ physics: { enabled: isPhysicsEnabled } });

        const pauseIcon = document.getElementById('pauseIcon');
        const playIcon = document.getElementById('playIcon');
        const btn = document.getElementById('freezeBtn');

        if (isPhysicsEnabled) {
          pauseIcon.style.display = 'block';
          playIcon.style.display = 'none';
          btn.classList.remove('active');
        } else {
          pauseIcon.style.display = 'none';
          playIcon.style.display = 'block';
          btn.classList.add('active');
        }
      });

      network.once('stabilizationIterationsDone', () => {
        network.fit({ animation: { duration: 400 } });
        // Disable physics after stabilization to prevent rotation
        network.setOptions({ physics: { enabled: false } });
        isPhysicsEnabled = false;

        // Update icon to play state
        const pauseIcon = document.getElementById('pauseIcon');
        const playIcon = document.getElementById('playIcon');
        const btn = document.getElementById('freezeBtn');
        pauseIcon.style.display = 'none';
        playIcon.style.display = 'block';
        btn.classList.add('active');
      });

      // Modal functionality
      const modal = document.getElementById('graphModal');
      const expandBtn = document.getElementById('expandBtn');
      const closeModalBtn = document.getElementById('closeModal');
      const modalContainer = document.getElementById('graph-modal-container');

      expandBtn.addEventListener('click', () => {
        modal.style.display = 'flex';
        document.body.style.overflow = 'hidden'; // Prevent background scrolling

        // Initialize modal graph after container is rendered
        setTimeout(() => {
          if (!modalNetwork) {
            const modalData = {
              nodes: new DataSet(nodes),
              edges: new DataSet(edges)
            };
            modalNetwork = new Network(modalContainer, modalData, options);

          // Setup navigation for modal graph
          modalNetwork.on('click', (params) => {
            if (params.edges.length > 0 && params.nodes.length === 0) {
              const edgeId = params.edges[0];
              const edgeData = modalData.edges.get(edgeId);
              if (edgeData && edgeData.title && edgeData.title.startsWith('http')) {
                window.open(edgeData.title, '_blank');
              }
              return;
            }
            if (params.nodes.length > 0) {
              const nodeId = params.nodes[0];
              if (isTermUri(nodeId)) {
                const termId = getTermId(nodeId);
                if (window.sourceIds && window.sourceIds.has(termId)) {
                  window.location.href = `/sources/${termId}`;
                } else {
                  window.location.href = `/terms/${termId}`;
                }
              } else if (nodeId.startsWith('http')) {
                window.open(nodeId, '_blank');
              }
            }
          });

          modalNetwork.once('stabilizationIterationsDone', () => {
            modalNetwork.fit({ animation: { duration: 400 } });
            modalNetwork.setOptions({ physics: { enabled: false } });
            isModalPhysicsEnabled = false;
            const pauseIconModal = document.getElementById('pauseIconModal');
            const playIconModal = document.getElementById('playIconModal');
            const btnModal = document.getElementById('freezeBtnModal');
            pauseIconModal.style.display = 'none';
            playIconModal.style.display = 'block';
            btnModal.classList.add('active');
          });

          // Modal controls
          document.getElementById('fitBtnModal').addEventListener('click', () => {
            modalNetwork.fit({ animation: { duration: 500, easingFunction: 'easeInOutQuad' } });
          });

          document.getElementById('freezeBtnModal').addEventListener('click', () => {
            isModalPhysicsEnabled = !isModalPhysicsEnabled;
            modalNetwork.setOptions({ physics: { enabled: isModalPhysicsEnabled } });

            const pauseIconModal = document.getElementById('pauseIconModal');
            const playIconModal = document.getElementById('playIconModal');
            const btnModal = document.getElementById('freezeBtnModal');

            if (isModalPhysicsEnabled) {
              pauseIconModal.style.display = 'block';
              playIconModal.style.display = 'none';
              btnModal.classList.remove('active');
            } else {
              pauseIconModal.style.display = 'none';
              playIconModal.style.display = 'block';
              btnModal.classList.add('active');
            }
          });
          } else {
            modalNetwork.redraw();
            modalNetwork.fit({ animation: { duration: 400 } });
          }
        }, 50); // Small delay to ensure container is rendered
      });

      function closeModal() {
        modal.style.display = 'none';
        document.body.style.overflow = ''; // Restore scrolling
      }

      closeModalBtn.addEventListener('click', closeModal);

      // Close modal on ESC key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && modal.style.display === 'flex') {
          closeModal();
        }
      });

      // Close modal when clicking outside
      modal.addEventListener('click', (e) => {
        if (e.target === modal) {
          closeModal();
        }
      });

      console.log('âœ… Graph initialized with force-directed layout');
    } catch (error) {
      console.error('Failed to initialize graph:', error);
      container.innerHTML = `<div style="padding: 2rem; color: red;">
        Graph initialization failed: ${error.message}
      </div>`;
    }
  }
</script>

