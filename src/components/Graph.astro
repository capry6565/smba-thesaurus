---
// Graph component for RDF visualization
const { nodes = [], edges = [], options = {} } = Astro.props;

const defaultOptions = {
  nodes: {
    shape: 'box',
    font: {
      size: 13,
      face: 'Inter, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif',
      color: '#2c3e50',
      multi: 'html',
      bold: { color: '#1a252f' }
    },
    borderWidth: 1.5,
    margin: { top: 12, right: 16, bottom: 12, left: 16 },  // More generous spacing for labels
    borderWidthSelected: 2,
    shapeProperties: {
      borderRadius: 6  // Softer, rounded corners
    },
    color: {
      border: '#7fa3d1',        // Softer blue
      background: '#e8f1fb',     // Lighter, more subtle blue
      highlight: { border: '#5a8cc9', background: '#d4e7f8' },
      hover: { border: '#4a7ab8', background: '#c2ddf5' }
    },
    chosen: {
      node: function(values, id, selected, hovering) {
        if (selected) {
          values.borderColor = '#4a7ab8';
          values.color = '#c2ddf5';
          values.borderWidth = 2.5;
        }
      }
    }
  },
  edges: {
    arrows: 'to',
    color: { color: '#999999', hover: '#2B7CE9', highlight: '#2B7CE9' },
    smooth: {
      enabled: true,
      type: 'dynamic',  // More organic, Obsidian-like curves
      roundness: 0.5
    },
    width: 1.5,
    font: {
      size: 11,
      align: 'horizontal',  // Better label positioning
      color: '#555',
      strokeWidth: 3,       // White outline around text for readability
      background: 'transparent',
      strokeColor: '#ffffff',
      vadjust: -15          // Move labels away from edges
    },
    chosen: {
      edge: function(values, id, selected, hovering) {
        if (hovering) {
          values.width = 2.5;
          values.color = '#2B7CE9';
        }
      },
      label: function(values, id, selected, hovering) {
        if (hovering) {
          values.size = 12;
          values.color = '#1a5fc7';
          values.strokeWidth = 4;
        }
      }
    }
  },
  layout: {
    improvedLayout: true,
    randomSeed: 2
  },
  physics: {
    enabled: true,
    solver: 'forceAtlas2Based',
    forceAtlas2Based: {
      gravitationalConstant: -70,    // Balanced repulsion
      centralGravity: 0.012,         // Slight central pull
      springLength: 160,             // Compact but readable connections
      springConstant: 0.04,          // Flexible springs for organic feel
      avoidOverlap: 2.5,             // Strong overlap prevention
      damping: 0.5                   // Smoother motion
    },
    stabilization: {
      enabled: true,
      iterations: 500,               // More iterations for better layout
      updateInterval: 25,
      fit: true
    }
  },
  interaction: {
    dragNodes: true,
    dragView: true,
    zoomView: true,
    hover: true,
    navigationButtons: false,
    keyboard: true
  }
};

const finalOptions = { ...defaultOptions, ...options };
const graphData = JSON.stringify({ nodes, edges, options: finalOptions });
---

