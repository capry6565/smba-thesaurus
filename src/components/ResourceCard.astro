---
interface Props {
  id: string;
  title: string;
  description?: string;
}

const { id, title, description = '' } = Astro.props;
const url = `/sources/${id}`;
---

<a href={url} class="resource-card" target="_blank">
  <h3>{title}</h3>
  {description && <p>{description}</p>}
</a>

<style>
  .resource-card {
    display: flex;
    flex-direction: column;
    padding: 1rem;
    border: 1px solid #e2e8f0;
    border-radius: 8px;
    text-decoration: none;
    color: inherit;
    transition: all 0.2s ease;
    background: white;
    height: 100%;
  }

  .resource-card:hover {
    border-color: #1e40af;
    box-shadow: 0 6px 12px rgba(30, 64, 175, 0.15);
    transform: translateY(-2px);
  }

  .resource-card h3 {
    margin: 0 0 0.5rem 0;
    font-size: 0.95rem;
    color: #1e40af;
    font-weight: 600;
    line-height: 1.3;
  }

  .resource-card p {
    margin: 0;
    color: #64748b;
    font-size: 0.8rem;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    flex: 1;
  }
</style>
