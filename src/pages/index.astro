<script>
  // Resource filter functionality
  const filterBtns = document.querySelectorAll('.filter-btn');
  const resourceCategories = document.querySelectorAll('.resource-category');

  filterBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const filter = btn.dataset.filter;

      // Update active button
      filterBtns.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');

      // Show/hide categories
      resourceCategories.forEach(category => {
        const categoryType = category.dataset.category;

        if (filter === 'all') {
          category.classList.remove('hidden');
        } else if (categoryType === filter) {
          category.classList.remove('hidden');
        } else {
          category.classList.add('hidden');
        }
      });
    });
  });

  // Knowledge Graph functionality
  const loadGraphBtn = document.getElementById('loadGraphBtn');
  const kgModal = document.getElementById('knowledgeGraphModal');
  const closeGraphModal = document.getElementById('closeGraphModal');
  let kgNetwork = null;
  let kgIsPhysicsEnabled = true;
  let allGraphData = null;

  // Build graph data from terms metadata and relationships
  const termsData = JSON.parse(document.getElementById('termsData').textContent);
  const relationshipsData = JSON.parse(document.getElementById('relationshipsData').textContent);

  function buildGraphData() {
    const nodes = [];
    const edges = [];
    const nodeIds = new Set();

    // Helper to get term metadata
    const getTermMeta = (termId) => termsData.find(t => t.id === termId);

    // Colors for different relationship types
    const relationshipColors = {
      'broader': { color: '#3b82f6', label: 'broader than' },
      'narrower': { color: '#10b981', label: 'narrower than' },
      'related': { color: '#f59e0b', label: 'related to' },
      'isPartOf': { color: '#8b5cf6', label: 'part of' }
    };

    // Collect all term IDs that have relationships
    const relatedTermIds = new Set();
    relationshipsData.forEach(rel => {
      relatedTermIds.add(rel.from);
      relatedTermIds.add(rel.to);
    });

    // Add nodes only for terms that have relationships
    relatedTermIds.forEach(termId => {
      const termMeta = getTermMeta(termId);
      if (termMeta) {
        nodes.push({
          id: termId,
          label: termMeta.title,
          group: 'term',
          title: termMeta.description ? termMeta.description.substring(0, 100) + '...' : termMeta.title,
          color: { background: '#e8f1fb', border: '#7fa3d1' },
          font: { size: 13, color: '#1e293b' },
          shape: 'box',
          margin: { top: 10, right: 14, bottom: 10, left: 14 },
          borderWidth: 2
        });
        nodeIds.add(termId);
      }
    });

    // Add edges based on relationships
    relationshipsData.forEach(rel => {
      if (nodeIds.has(rel.from) && nodeIds.has(rel.to)) {
        const relConfig = relationshipColors[rel.type] || { color: '#94a3b8', label: rel.type };
        edges.push({
          from: rel.from,
          to: rel.to,
          label: relConfig.label,
          color: { color: relConfig.color },
          arrows: 'to',
          relationshipType: rel.type,
          font: { size: 10, color: '#64748b' }
        });
      }
    });

    return { nodes, edges };
  }

  // Load graph button click
  loadGraphBtn.addEventListener('click', async () => {
    loadGraphBtn.disabled = true;
    loadGraphBtn.innerHTML = '<span>Loading...</span>';

    // Dynamically load vis-network if not already loaded
    if (!window.vis) {
      const script = document.createElement('script');
      script.type = 'module';
      script.textContent = `
        import { Network, DataSet } from 'https://unpkg.com/vis-network@9.1.9/standalone/esm/vis-network.min.js';
        window.vis = { Network, DataSet };
        window.dispatchEvent(new Event('visLoaded'));
      `;
      document.head.appendChild(script);
      await new Promise(resolve => window.addEventListener('visLoaded', resolve, { once: true }));
    }

    // Show modal
    kgModal.classList.add('active');
    document.body.style.overflow = 'hidden';

    setTimeout(() => {
      if (!kgNetwork) {
        allGraphData = buildGraphData();
        initializeGraph(allGraphData);
      }
    }, 100);
  });

  function initializeGraph(graphData) {
    const container = document.getElementById('knowledgeGraphContainer');
    const data = {
      nodes: new window.vis.DataSet(graphData.nodes),
      edges: new window.vis.DataSet(graphData.edges)
    };

    const options = {
      nodes: {
        shape: 'box',
        margin: { top: 12, right: 16, bottom: 12, left: 16 },
        borderWidth: 1.5,
        borderWidthSelected: 2,
        shapeProperties: { borderRadius: 6 },
        font: { face: 'Inter, sans-serif', color: '#2c3e50' }
      },
      edges: {
        arrows: 'to',
        smooth: { enabled: true, type: 'dynamic', roundness: 0.5 },
        font: { size: 10, align: 'horizontal' }
      },
      physics: {
        enabled: true,
        solver: 'forceAtlas2Based',
        forceAtlas2Based: {
          gravitationalConstant: -70,
          centralGravity: 0.006,
          springLength: 160,
          springConstant: 0.04,
          avoidOverlap: 2.5,
          damping: 0.6
        },
        stabilization: {
          enabled: true,
          iterations: 500,
          updateInterval: 25,
          fit: true
        }
      },
      interaction: { hover: true, zoomView: true }
    };

    kgNetwork = new window.vis.Network(container, data, options);

    // Update stats
    updateStats(data.nodes.length, data.edges.length);

    // Handle click navigation
    kgNetwork.on('click', (params) => {
      if (params.nodes.length > 0) {
        const termId = params.nodes[0];
        window.location.href = `/terms/${termId}`;
      }
    });

    // Physics complete
    kgNetwork.once('stabilizationIterationsDone', () => {
      kgNetwork.fit();
      kgNetwork.setOptions({ physics: { enabled: false } });
      kgIsPhysicsEnabled = false;
      updatePhysicsIcons();
    });

    // Controls
    document.getElementById('kgFitBtn').addEventListener('click', () => {
      kgNetwork.fit({ animation: { duration: 500 } });
    });

    document.getElementById('kgFreezeBtn').addEventListener('click', () => {
      kgIsPhysicsEnabled = !kgIsPhysicsEnabled;
      kgNetwork.setOptions({ physics: { enabled: kgIsPhysicsEnabled } });
      updatePhysicsIcons();
    });

    // Filter
    document.getElementById('relationshipFilter').addEventListener('change', (e) => {
      const selectedRelType = e.target.value;
      filterGraph(selectedRelType);
    });
  }

  function filterGraph(relType) {
    if (!kgNetwork || !allGraphData) return;

    let filteredEdges = [...allGraphData.edges];

    // Filter edges by relationship type
    if (relType !== 'all') {
      filteredEdges = allGraphData.edges.filter(edge =>
        edge.relationshipType === relType
      );
    }

    // Get unique node IDs from filtered edges
    const nodeIdSet = new Set();
    filteredEdges.forEach(edge => {
      nodeIdSet.add(edge.from);
      nodeIdSet.add(edge.to);
    });

    // Filter nodes to only include those connected by filtered edges
    const filteredNodes = allGraphData.nodes.filter(node =>
      nodeIdSet.has(node.id)
    );

    kgNetwork.setData({
      nodes: new window.vis.DataSet(filteredNodes),
      edges: new window.vis.DataSet(filteredEdges)
    });

    updateStats(filteredNodes.length, filteredEdges.length);
    kgNetwork.fit();
  }

  function updateStats(nodes, edges) {
    document.getElementById('visibleNodes').textContent = nodes;
    document.getElementById('visibleEdges').textContent = edges;
  }

  function updatePhysicsIcons() {
    const pauseIcon = document.getElementById('kgPauseIcon');
    const playIcon = document.getElementById('kgPlayIcon');
    const btn = document.getElementById('kgFreezeBtn');

    if (kgIsPhysicsEnabled) {
      pauseIcon.style.display = 'block';
      playIcon.style.display = 'none';
      btn.classList.remove('active');
    } else {
      pauseIcon.style.display = 'none';
      playIcon.style.display = 'block';
      btn.classList.add('active');
    }
  }

  function closeKgModal() {
    kgModal.classList.remove('active');
    document.body.style.overflow = '';
    loadGraphBtn.disabled = false;
    loadGraphBtn.innerHTML = `
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
        <path d="M15 3H19C20.1046 3 21 3.89543 21 5V19C21 20.1046 20.1046 21 19 21H15" stroke="currentColor" stroke-width="2"/>
        <path d="M10 17L15 12L10 7" stroke="currentColor" stroke-width="2"/>
        <path d="M15 12H3" stroke="currentColor" stroke-width="2"/>
      </svg>
      Load Knowledge Graph
    `;
  }

  closeGraphModal.addEventListener('click', closeKgModal);

  // Close on ESC
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && kgModal.classList.contains('active')) {
      closeKgModal();
    }
  });

  // Close on backdrop click
  kgModal.addEventListener('click', (e) => {
    if (e.target === kgModal) {
      closeKgModal();
    }
  });
</script>

