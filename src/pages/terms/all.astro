<script>
  // Get DOM elements
  const searchInput = document.getElementById('searchInput') as HTMLInputElement;
  const termsGrid = document.getElementById('termsGrid');
  const noResults = document.getElementById('noResults');
  const letterBtns = document.querySelectorAll('.letter-btn');
  const sourcesToggle = document.getElementById('sourcesToggle');
  const sourcesDropdown = document.getElementById('sourcesDropdown');
  const sourcesLabel = document.getElementById('sourcesLabel');
  const sourceAll = document.getElementById('sourceAll') as HTMLInputElement;
  const sourceCheckboxes = document.querySelectorAll('.source-checkbox') as NodeListOf<HTMLInputElement>;
  const itemsPerPageSelect = document.getElementById('itemsPerPageSelect') as HTMLSelectElement;
  const prevPageBtn = document.getElementById('prevPage') as HTMLButtonElement;
  const nextPageBtn = document.getElementById('nextPage') as HTMLButtonElement;
  const pageNumbersContainer = document.getElementById('pageNumbers');
  const paginationControls = document.getElementById('paginationControls');
  const rangeStart = document.getElementById('rangeStart');
  const rangeEnd = document.getElementById('rangeEnd');
  const totalCount = document.getElementById('totalCount');

  // State
  let activeFilters = {
    search: '',
    letter: 'all',
    sources: new Set<string>(),
    page: 1,
    itemsPerPage: 50
  };

  // Read URL parameters on load
  function readUrlParams() {
    const params = new URLSearchParams(window.location.search);

    if (params.has('search')) {
      activeFilters.search = params.get('search') || '';
      searchInput.value = activeFilters.search;
    }

    if (params.has('letter')) {
      activeFilters.letter = params.get('letter') || 'all';
    }

    if (params.has('sources')) {
      const sources = params.get('sources')?.split(',').filter(Boolean) || [];
      activeFilters.sources = new Set(sources);

      // Update checkboxes
      if (sources.length > 0) {
        sourceAll.checked = false;
        sourceCheckboxes.forEach(cb => {
          cb.checked = activeFilters.sources.has(cb.value);
        });
        updateSourcesLabel();
      }
    }

    if (params.has('page')) {
      activeFilters.page = parseInt(params.get('page') || '1', 10);
    }

    if (params.has('itemsPerPage')) {
      const ipp = params.get('itemsPerPage');
      if (ipp === 'all') {
        activeFilters.itemsPerPage = -1;
        itemsPerPageSelect.value = 'all';
      } else {
        activeFilters.itemsPerPage = parseInt(ipp || '50', 10);
        itemsPerPageSelect.value = ipp || '50';
      }
    }

    // Update UI
    letterBtns.forEach(btn => {
      btn.classList.toggle('active', btn.dataset.letter === activeFilters.letter);
    });
  }

  // Update URL parameters
  function updateUrlParams() {
    const params = new URLSearchParams();

    if (activeFilters.search) {
      params.set('search', activeFilters.search);
    }

    if (activeFilters.letter !== 'all') {
      params.set('letter', activeFilters.letter);
    }

    if (activeFilters.sources.size > 0) {
      params.set('sources', Array.from(activeFilters.sources).join(','));
    }

    if (activeFilters.page > 1) {
      params.set('page', activeFilters.page.toString());
    }

    if (activeFilters.itemsPerPage !== 50) {
      params.set('itemsPerPage', activeFilters.itemsPerPage === -1 ? 'all' : activeFilters.itemsPerPage.toString());
    }

    const newUrl = params.toString()
      ? `${window.location.pathname}?${params.toString()}`
      : window.location.pathname;

    window.history.replaceState({}, '', newUrl);
  }

  // Filter terms
  function filterTerms() {
    const termCards = termsGrid?.querySelectorAll('.term-card') || [];

    // First pass: filter by search/letter/source and collect matching terms
    const matchingCards: HTMLElement[] = [];

    termCards.forEach((card) => {
      const element = card as HTMLElement;
      const title = element.dataset.title || '';
      const letter = element.dataset.letter || '';
      const sources = JSON.parse(element.dataset.sources || '[]');

      // Search filter
      const matchesSearch = !activeFilters.search ||
        title.includes(activeFilters.search.toLowerCase());

      // Letter filter
      const matchesLetter = activeFilters.letter === 'all' ||
        letter === activeFilters.letter;

      // Source filter
      const matchesSource = activeFilters.sources.size === 0 ||
        sources.some((s: string) => activeFilters.sources.has(s));

      if (matchesSearch && matchesLetter && matchesSource) {
        matchingCards.push(element);
      } else {
        element.style.display = 'none';
      }
    });

    const totalMatching = matchingCards.length;

    // Update total count
    if (totalCount) {
      totalCount.textContent = totalMatching.toString();
    }

    // Show/hide no results message
    if (noResults) {
      noResults.style.display = totalMatching === 0 ? 'block' : 'none';
    }
    if (termsGrid) {
      termsGrid.style.display = totalMatching === 0 ? 'none' : 'grid';
    }

    // Calculate pagination
    const itemsPerPage = activeFilters.itemsPerPage;
    const showAll = itemsPerPage === -1;
    const totalPages = showAll ? 1 : Math.ceil(totalMatching / itemsPerPage);

    // Adjust current page if needed
    if (activeFilters.page > totalPages && totalPages > 0) {
      activeFilters.page = totalPages;
    }
    if (activeFilters.page < 1) {
      activeFilters.page = 1;
    }

    // Second pass: show only items for current page
    if (showAll) {
      // Show all matching items
      matchingCards.forEach(card => {
        card.style.display = 'block';
      });

      // Update counter
      if (rangeStart && rangeEnd) {
        rangeStart.textContent = totalMatching > 0 ? '1' : '0';
        rangeEnd.textContent = totalMatching.toString();
      }

      // Hide pagination controls
      if (paginationControls) {
        paginationControls.style.display = 'none';
      }
    } else {
      // Calculate range for current page
      const startIdx = (activeFilters.page - 1) * itemsPerPage;
      const endIdx = Math.min(startIdx + itemsPerPage, totalMatching);

      // Show only items in current page range
      matchingCards.forEach((card, idx) => {
        card.style.display = (idx >= startIdx && idx < endIdx) ? 'block' : 'none';
      });

      // Update counter
      if (rangeStart && rangeEnd) {
        rangeStart.textContent = totalMatching > 0 ? (startIdx + 1).toString() : '0';
        rangeEnd.textContent = endIdx.toString();
      }

      // Show/hide pagination controls
      if (paginationControls) {
        paginationControls.style.display = totalPages > 1 ? 'flex' : 'none';
      }

      // Update pagination controls
      updatePaginationControls(totalPages);
    }

    updateUrlParams();
  }

  // Update pagination controls
  function updatePaginationControls(totalPages: number) {
    // Update prev/next buttons
    if (prevPageBtn) {
      prevPageBtn.disabled = activeFilters.page <= 1;
    }
    if (nextPageBtn) {
      nextPageBtn.disabled = activeFilters.page >= totalPages;
    }

    // Generate page numbers
    if (pageNumbersContainer) {
      pageNumbersContainer.innerHTML = '';

      if (totalPages <= 7) {
        // Show all pages if 7 or fewer
        for (let i = 1; i <= totalPages; i++) {
          pageNumbersContainer.appendChild(createPageButton(i));
        }
      } else {
        // Show smart pagination with ellipsis
        // Always show: 1 ... (current-1) current (current+1) ... last
        pageNumbersContainer.appendChild(createPageButton(1));

        if (activeFilters.page > 3) {
          pageNumbersContainer.appendChild(createEllipsis());
        }

        const start = Math.max(2, activeFilters.page - 1);
        const end = Math.min(totalPages - 1, activeFilters.page + 1);

        for (let i = start; i <= end; i++) {
          pageNumbersContainer.appendChild(createPageButton(i));
        }

        if (activeFilters.page < totalPages - 2) {
          pageNumbersContainer.appendChild(createEllipsis());
        }

        pageNumbersContainer.appendChild(createPageButton(totalPages));
      }
    }
  }

  // Create page button
  function createPageButton(pageNum: number): HTMLElement {
    const btn = document.createElement('button');
    btn.className = 'page-number';
    btn.textContent = pageNum.toString();

    // Check if this is the active page
    const isActive = Number(pageNum) === Number(activeFilters.page);
    if (isActive) {
      btn.classList.add('active');
      btn.setAttribute('aria-current', 'page');
    }

    btn.addEventListener('click', () => {
      activeFilters.page = Number(pageNum);
      filterTerms();
      // Delay scroll to ensure DOM is updated
      setTimeout(() => {
        window.scrollTo({ top: 0, behavior: 'smooth' });
      }, 50);
    });
    return btn;
  }

  // Create ellipsis
  function createEllipsis(): HTMLElement {
    const ellipsis = document.createElement('span');
    ellipsis.className = 'page-number ellipsis';
    ellipsis.textContent = '...';
    return ellipsis;
  }

  // Update sources label
  function updateSourcesLabel() {
    const selectedCount = activeFilters.sources.size;
    if (selectedCount === 0) {
      sourcesLabel!.textContent = 'All Sources';
    } else if (selectedCount === 1) {
      sourcesLabel!.textContent = Array.from(activeFilters.sources)[0];
    } else {
      sourcesLabel!.textContent = `${selectedCount} sources selected`;
    }
  }

  // Search input handler
  searchInput?.addEventListener('input', (e) => {
    activeFilters.search = (e.target as HTMLInputElement).value;
    activeFilters.page = 1; // Reset to first page on search
    filterTerms();
  });

  // Letter filter handlers
  letterBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      activeFilters.letter = btn.dataset.letter || 'all';
      activeFilters.page = 1; // Reset to first page on filter change
      letterBtns.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      filterTerms();
    });
  });

  // Items per page selector
  itemsPerPageSelect?.addEventListener('change', (e) => {
    const value = (e.target as HTMLSelectElement).value;
    if (value === 'all') {
      activeFilters.itemsPerPage = -1;
    } else {
      activeFilters.itemsPerPage = parseInt(value, 10);
    }
    activeFilters.page = 1; // Reset to first page
    filterTerms();
  });

  // Previous page button
  prevPageBtn?.addEventListener('click', () => {
    if (activeFilters.page > 1) {
      activeFilters.page--;
      filterTerms();
      // Delay scroll to ensure DOM is updated
      setTimeout(() => {
        window.scrollTo({ top: 0, behavior: 'smooth' });
      }, 50);
    }
  });

  // Next page button
  nextPageBtn?.addEventListener('click', () => {
    activeFilters.page++;
    filterTerms();
    // Delay scroll to ensure DOM is updated
    setTimeout(() => {
      window.scrollTo({ top: 0, behavior: 'smooth' });
    }, 50);
  });

  // Multi-select dropdown toggle
  sourcesToggle?.addEventListener('click', () => {
    sourcesDropdown?.classList.toggle('open');
  });

  // Close dropdown when clicking outside
  document.addEventListener('click', (e) => {
    if (!sourcesToggle?.contains(e.target as Node) &&
        !sourcesDropdown?.contains(e.target as Node)) {
      sourcesDropdown?.classList.remove('open');
    }
  });

  // "All Sources" checkbox handler
  sourceAll?.addEventListener('change', () => {
    if (sourceAll.checked) {
      activeFilters.sources.clear();
      sourceCheckboxes.forEach(cb => cb.checked = false);
    }
    activeFilters.page = 1; // Reset to first page on filter change
    updateSourcesLabel();
    filterTerms();
  });

  // Individual source checkbox handlers
  sourceCheckboxes.forEach(cb => {
    cb.addEventListener('change', () => {
      if (cb.checked) {
        activeFilters.sources.add(cb.value);
        sourceAll.checked = false;
      } else {
        activeFilters.sources.delete(cb.value);
        if (activeFilters.sources.size === 0) {
          sourceAll.checked = true;
        }
      }
      activeFilters.page = 1; // Reset to first page on filter change
      updateSourcesLabel();
      filterTerms();
    });
  });

  // Initialize on page load
  readUrlParams();
  filterTerms();
</script>
</Layout>
