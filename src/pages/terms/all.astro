---
import TermCard from '../../components/TermCard.astro';
import termsMetadata from '../../data/termsMetadata.json';

// Sort alphabetically by title for catalog view
const sortedTerms = [...termsMetadata].sort((a, b) =>
  a.title.localeCompare(b.title)
);

// Get all unique sources
const allSources = [...new Set(sortedTerms.flatMap(t => t.sources))].sort();

// Get all letters that have terms
const availableLetters = [...new Set(sortedTerms.map(t => t.letter))].sort();
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Terms - SMBA Thesaurus</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
</head>
<body>
  <header>
    <div class="container">
      <div class="logo">
        <a href="/">
          <img src="/SMBA_Logo_4.jpg" alt="SMBA Logo">
        </a>
      </div>
      <div class="header-text">
        <h1><a href="/">SMBA</a></h1>
        <p class="subtitle">Unified Semantic Model of Business Analysis</p>
      </div>
    </div>
  </header>

  <main>
    <div class="container">
      <div class="catalog-header">
        <h1>
          <a href="/" class="breadcrumb-text">← <strong>SMBA</strong> Thesaurus</a>
          <span class="breadcrumb-separator">/</span>
          All Terms
        </h1>
      </div>

    <div class="filters-container">
      <!-- Search box -->
      <div class="search-box">
        <input
          type="text"
          id="searchInput"
          placeholder="Enter a term to search in labels and definitions."
          autocomplete="off"
        />
      </div>

      <!-- Multi-select sources dropdown -->
      <div class="filter-group">
        <label>Filter by Source:</label>
        <div class="multi-select-wrapper">
          <button type="button" id="sourcesToggle" class="multi-select-toggle">
            <span id="sourcesLabel">All Sources</span>
            <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
              <path d="M4.5 6l3.5 3.5L11.5 6z"/>
            </svg>
          </button>
          <div id="sourcesDropdown" class="multi-select-dropdown">
            <label class="source-option">
              <input type="checkbox" value="all" id="sourceAll" checked />
              <span>All Sources</span>
            </label>
            {allSources.map(source => (
              <label class="source-option">
                <input type="checkbox" class="source-checkbox" value={source} />
                <span>{source}</span>
              </label>
            ))}
          </div>
        </div>
      </div>

      <!-- Letter filter buttons -->
      <div class="filter-group">
        <label>Filter by Letter:</label>
        <div class="letter-filters">
          <button class="letter-btn active" data-letter="all">All</button>
          {availableLetters.map(letter => (
            <button class="letter-btn" data-letter={letter}>{letter}</button>
          ))}
        </div>
      </div>
    </div>

    <!-- Results counter and items per page selector -->
    <div class="pagination-header">
      <div id="resultsCounter" class="results-counter">
        Showing <span id="rangeStart">1</span>-<span id="rangeEnd">50</span> of <span id="totalCount">219</span> terms
      </div>
      <div class="items-per-page">
        <label>Show:</label>
        <select id="itemsPerPageSelect">
          <option value="25">25</option>
          <option value="50" selected>50</option>
          <option value="100">100</option>
          <option value="all">All</option>
        </select>
      </div>
    </div>

    <!-- Terms grid -->
    <div id="termsGrid" class="terms-grid">
      {sortedTerms.map(term => (
        <TermCard
          id={term.id}
          title={term.title}
          description={term.description}
          sources={term.sources}
          letter={term.letter}
        />
      ))}
    </div>

    <!-- No results message -->
    <div id="noResults" class="no-results" style="display: none;">
      <p>No results found</p>
    </div>

    <!-- Pagination controls -->
    <div id="paginationControls" class="pagination-controls">
      <button id="prevPage" class="pagination-btn" disabled>
        <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
          <path d="M10 12L6 8l4-4"/>
        </svg>
        Previous
      </button>
      <div id="pageNumbers" class="page-numbers"></div>
      <button id="nextPage" class="pagination-btn">
        Next
        <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
          <path d="M6 12l4-4-4-4"/>
        </svg>
      </button>
    </div>
    </div>
  </main>

  <footer>
    <div class="footer-container">
      <p>
        <strong>SMBA</strong> Thesaurus — A community-driven semantic model for Business Analysis<br>
        Built with <a href="https://astro.build" target="_blank">Astro</a>, <a href="https://www.w3.org/RDF/" target="_blank">RDF</a>, and <a href="https://www.w3.org/2004/02/skos/" target="_blank">SKOS</a>
      </p>
    </div>
  </footer>

  <script data-goatcounter="https://smba.goatcounter.com/count"
          async src="https://gc.zgo.at/count.js"></script>
</body>
</html>

