export async function getStaticPaths() {
  const files = fs.readdirSync("./terms").filter(f => f.endsWith(".ttl"));
  return files.map(f => ({
    params: { id: f.replace(".ttl", "") },
  }));
}

const { id } = Astro.params;
const filePath = path.resolve(`./terms/${id}.ttl`);
const ttlText = fs.readFileSync(filePath, "utf8");

const { triples, nodes, edges } = parseRdf(ttlText);

const mainTerm = triples.find(t =>
  t.predicate.includes('prefLabel') || t.predicate.includes('label')
)?.object.replace(/@\w+$/, '') || id;

// Collect all source IDs for graph navigation
const allSourceIds = new Set([
  ...externalResources.standards.map(s => s.id),
  ...externalResources.bibliographicResources.map(s => s.id),
  ...externalResources.publishers.map(s => s.id),
  ...externalResources.contributors.map(s => s.id)
]);

// Get the main subject URI
const mainSubjectUri = triples[0]?.subject || `:${id}`;

// Parse original RDF to get raw object URIs (not cleaned)
import * as $rdf from 'rdflib';
const store = $rdf.graph();
$rdf.parse(ttlText, store, 'http://example.org/', 'text/turtle');

// Create a map of cleaned -> original URIs
const objectUriMap = new Map();
store.statements.forEach(statement => {
  const rawObject = statement.object.value;
  const cleanedObject = rawObject
    .replace('http://www.w3.org/1999/02/22-rdf-syntax-ns#', 'rdf:')
    .replace('http://www.w3.org/2004/02/skos/core#', 'skos:')
    .replace('http://purl.org/dc/terms/', 'dct:')
    .replace('http://www.w3.org/2000/01/rdf-schema#', 'rdfs:')
    .replace('http://example.org/', ':')
    .replace('https://usmba.ai/', ':')
    .replace('http://usmba.ai/', ':');

  objectUriMap.set(cleanedObject, rawObject);
});

// ÐŸÐ¾ÐºÐ°Ð·Ñ‹Ð²Ð°ÐµÐ¼ Ð’Ð¡Ð• Ñ‚Ñ€Ð¸Ð¿Ð»Ñ‹ Ð±ÐµÐ· Ñ„Ð¸Ð»ÑŒÑ‚Ñ€Ð°Ñ†Ð¸Ð¸ (Semantic Web Ð¼ÐµÑ‚Ð¾Ð´Ð¾Ð»Ð¾Ð³Ð¸Ñ)
const properties = [];

const attributeMap = new Map();
triples.forEach(triple => {
  const attr = triple.predicate;

  if (!attributeMap.has(attr)) {
    attributeMap.set(attr, []);
  }
  attributeMap.get(attr).push({
    value: triple.object,
    subject: triple.subject,
    rawUri: objectUriMap.get(triple.object) || triple.object
  });
});

Array.from(attributeMap.entries()).forEach(([attr, items]) => {
  properties.push({
    attribute: attr,
    value: items.map(i => i.value).join(', '),
    subject: items[0].subject,
    objects: items.map(i => i.value),
    rawObjects: items.map(i => i.rawUri)
  });
});
