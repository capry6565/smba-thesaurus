  <script>
    // Make attributes clickable - map prefixes to URIs
    const prefixMap = {
      'skos:': 'http://www.w3.org/2004/02/skos/core#',
      'dct:': 'http://purl.org/dc/terms/',
      'rdf:': 'http://www.w3.org/1999/02/22-rdf-syntax-ns#',
      'rdfs:': 'http://www.w3.org/2000/01/rdf-schema#'
    };

    document.addEventListener('DOMContentLoaded', () => {
      // Make attribute cells clickable
      const propertyRows = document.querySelectorAll('.property-row');
      propertyRows.forEach(row => {
        const attributeCell = row.querySelector('td:first-child');
        const attributeValue = attributeCell.textContent.trim();

        // Check if attribute has a known prefix
        for (const [prefix, baseUri] of Object.entries(prefixMap)) {
          if (attributeValue.startsWith(prefix)) {
            const localName = attributeValue.substring(prefix.length);
            const fullUri = baseUri + localName;

            // Make it a link
            attributeCell.innerHTML = `<a href="${fullUri}" target="_blank" class="attribute-link">${attributeValue}</a>`;
            break;
          }
        }
      });
    });
  </script>

  <script>
    // Bidirectional highlighting between table rows and graph
    document.addEventListener('DOMContentLoaded', () => {
      const propertyRows = document.querySelectorAll('.property-row');
      let highlightTimeout = null;

      // Wait for graph to be ready
      const waitForGraph = setInterval(() => {
        if (window.graphNetwork && window.graphData) {
          clearInterval(waitForGraph);
          initializeHighlighting();
        }
      }, 100);

      function initializeHighlighting() {
        const network = window.graphNetwork;
        const data = window.graphData;

        // Table row hover -> highlight ONLY graph nodes (not edges)
        propertyRows.forEach(row => {
          row.addEventListener('mouseenter', () => {
            const rawObjects = JSON.parse(row.dataset.rawObjects || '[]');

            // Find matching nodes using raw URIs
            const allNodes = data.nodes.get();
            const matchingNodes = [];

            allNodes.forEach(node => {
              // Match using raw URIs
              if (rawObjects.includes(node.id)) {
                matchingNodes.push(node.id);
              }
            });

            console.log('Row hover -> raw objects:', rawObjects);
            console.log('Row hover -> matching nodes:', matchingNodes);

            // Highlight ONLY nodes in graph (no edges, no focus/zoom)
            if (matchingNodes.length > 0) {
              network.selectNodes(matchingNodes, false);
            }

            // Highlight the row
            row.style.background = '#dbeafe';
            row.style.borderLeft = '4px solid #1e40af';
          });

          row.addEventListener('mouseleave', () => {
            // Clear selection immediately
            network.unselectAll();

            // Remove row highlight
            row.style.background = '';
            row.style.borderLeft = '';
          });
        });

        // Graph node hover -> highlight table row
        network.on('hoverNode', (params) => {
          clearRowHighlights();
          const nodeId = params.node;

          console.log('Node hover -> node ID:', nodeId);

          propertyRows.forEach(row => {
            const rawObjects = JSON.parse(row.dataset.rawObjects || '[]');

            console.log('Checking row raw objects:', rawObjects);

            // Highlight row if this node is in the raw objects
            if (rawObjects.includes(nodeId)) {
              row.style.background = '#e3f2fd';
              row.style.borderLeft = '4px solid #2196F3';
            }
          });
        });

        network.on('blurNode', () => {
          clearRowHighlights();
        });

        function clearRowHighlights() {
          propertyRows.forEach(row => {
            row.style.background = '';
            row.style.borderLeft = '';
          });
        }
      }
    });
  </script>

  <script>
    // Tab switching functionality
    document.addEventListener('DOMContentLoaded', () => {
      const tabButtons = document.querySelectorAll('.tab-btn');
      const tabContents = document.querySelectorAll('.tab-content');

      tabButtons.forEach(button => {
        button.addEventListener('click', () => {
          const targetTab = button.dataset.tab;

          // Remove active class from all buttons and contents
          tabButtons.forEach(btn => btn.classList.remove('active'));
          tabContents.forEach(content => content.classList.remove('active'));

          // Add active class to clicked button and corresponding content
          button.classList.add('active');
          document.getElementById(`${targetTab}-tab`).classList.add('active');
        });
      });
    });
  </script>

  <script>
